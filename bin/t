#!/bin/bash

TMUX=/usr/bin/tmux

[ -z $1 ] && exit 1

case $1 in
  mon|monitor)
    shift
    if [ "$1" = "on" ] || [ "$1" = "off" ]; then
      $TMUX set-window-option monitor-activity $1
    elif [ ! -z "$1" ]; then
      $TMUX set-window-option monitor-content $1
    fi
    ;;
  rn|ren|rename)
    shift
    $TMUX rename-window $1
    ;;
  *)
    echo "Invalid option: $1"
    exit 1
    ;;
esac

